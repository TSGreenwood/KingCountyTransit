{
    "name": "Mapbox Tilesets & Geospatial Data Analysis",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "VARIANT": "3.9-bullseye",
            "INSTALL_NODE": "true",
            "NODE_VERSION": "lts/*"
        }
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh",
                "python.analysis.indexing": true,
                "python.analysis.typeCheckingMode": "basic"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "github.codespaces",
                "esbenp.prettier-vscode"
            ]
        }
    },
    "forwardPorts": [],
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y libgdal-dev && pip install jupyter numpy pandas geopandas folium matplotlib mapbox scikit-learn mapbox-tilesets mapbox-tilesets[estimate-area] rasterio",
    "remoteUser": "vscode",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11"
        }
    }
}

